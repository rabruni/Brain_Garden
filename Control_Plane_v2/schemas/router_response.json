{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "router_response.json",
  "title": "Router Response",
  "description": "Response schema for the Query Router CLI",
  "type": "object",
  "properties": {
    "status": {
      "type": "string",
      "enum": ["ok", "error"],
      "description": "Operation status"
    },
    "result": {
      "description": "Operation result (present on success)",
      "oneOf": [
        {
          "description": "route result",
          "type": "object",
          "properties": {
            "mode": {
              "type": "string",
              "enum": ["tools_first", "llm_assisted", "denied"]
            },
            "handler": { "type": "string" },
            "classification": { "$ref": "#/$defs/classification" },
            "prompt_pack_id": { "type": "string" },
            "reason": { "type": "string" },
            "capabilities_used": {
              "type": "array",
              "items": { "type": "string" }
            }
          },
          "required": ["mode", "handler", "classification"]
        },
        {
          "description": "classify result",
          "$ref": "#/$defs/classification"
        },
        {
          "description": "list_handlers result",
          "type": "object",
          "properties": {
            "handlers": {
              "type": "object",
              "additionalProperties": { "type": "string" }
            }
          },
          "required": ["handlers"]
        }
      ]
    },
    "error": {
      "type": "object",
      "description": "Error details (present on error)",
      "properties": {
        "code": { "type": "string" },
        "message": { "type": "string" },
        "details": {}
      },
      "required": ["code", "message"]
    },
    "evidence": {
      "type": "object",
      "description": "Evidence envelope",
      "properties": {
        "timestamp": { "type": "string", "format": "date-time" },
        "duration_ms": { "type": "integer" },
        "route_decision": {
          "type": "object",
          "properties": {
            "mode": { "type": "string" },
            "handler": { "type": "string" },
            "query_type": { "type": "string" },
            "pattern_matched": { "type": "boolean" },
            "confidence": { "type": "number" }
          }
        },
        "policy": {
          "type": "object",
          "properties": {
            "allowed": { "type": "boolean" },
            "violations": { "type": "array", "items": { "type": "string" } },
            "modifications": { "type": "array", "items": { "type": "string" } }
          }
        }
      },
      "required": ["timestamp"]
    }
  },
  "required": ["status"],
  "$defs": {
    "classification": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": ["list", "explain", "status", "inventory", "validate", "summarize", "general"]
        },
        "confidence": { "type": "number", "minimum": 0, "maximum": 1 },
        "pattern_matched": { "type": "boolean" },
        "matched_pattern": { "type": "string" },
        "extracted_args": { "type": "object" }
      },
      "required": ["type", "confidence", "pattern_matched"]
    }
  }
}
