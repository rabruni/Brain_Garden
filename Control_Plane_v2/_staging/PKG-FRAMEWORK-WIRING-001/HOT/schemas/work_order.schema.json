{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://control-plane.local/schemas/work_order.schema.json",
  "title": "Work Order Schema",
  "description": "Schema for Control Plane Work Orders - the atomic unit of governed change",
  "type": "object",
  "required": [
    "work_order_id",
    "type",
    "plane_id",
    "spec_id",
    "framework_id",
    "scope",
    "acceptance"
  ],
  "properties": {
    "work_order_id": {
      "type": "string",
      "pattern": "^WO-\\d{8}-\\d{3}$",
      "description": "Unique identifier in format WO-YYYYMMDD-NNN"
    },
    "type": {
      "type": "string",
      "enum": ["code_change", "spec_delta", "registry_change", "dependency_add"],
      "description": "Type of change this work order authorizes"
    },
    "plane_id": {
      "type": "string",
      "enum": ["hot", "ho2", "ho1"],
      "description": "Target plane for this work order"
    },
    "spec_id": {
      "type": "string",
      "pattern": "^SPEC-[A-Z0-9-]+$",
      "description": "Specification this work order operates under"
    },
    "framework_id": {
      "type": "string",
      "pattern": "^FMWK-[A-Z0-9-]+$",
      "description": "Framework governing this work order"
    },
    "agent_class": {
      "type": "string",
      "enum": ["KERNEL.syntactic", "KERNEL.semantic", "ADMIN", "RESIDENT"],
      "description": "Agent class authorized to execute this work order"
    },
    "title": {
      "type": "string",
      "maxLength": 200,
      "description": "Human-readable title for the work order"
    },
    "description": {
      "type": "string",
      "description": "Detailed description of what this work order accomplishes"
    },
    "scope": {
      "type": "object",
      "required": ["allowed_files"],
      "properties": {
        "allowed_files": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Files this work order is permitted to modify (glob patterns supported)"
        },
        "forbidden_files": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Files explicitly forbidden from modification"
        }
      },
      "description": "Defines the scope boundary for this work order"
    },
    "constraints": {
      "type": "object",
      "properties": {
        "no_new_deps_unless": {
          "type": "string",
          "description": "Condition under which new dependencies may be added"
        },
        "no_api_change_unless": {
          "type": "string",
          "description": "Condition under which API changes may be made"
        },
        "no_file_create_unless": {
          "type": "string",
          "description": "Condition under which new files may be created"
        }
      },
      "description": "Additional constraints beyond scope"
    },
    "budget": {
      "type": "object",
      "properties": {
        "token_limit": {
          "type": "integer",
          "minimum": 1,
          "description": "Maximum tokens this WO may consume across all prompts"
        },
        "turn_limit": {
          "type": "integer",
          "minimum": 1,
          "description": "Maximum LLM round-trips"
        },
        "timeout_seconds": {
          "type": "integer",
          "minimum": 1,
          "description": "Wall-clock timeout for entire WO execution"
        }
      },
      "description": "Resource budget for this work order"
    },
    "authorization": {
      "type": "object",
      "properties": {
        "authorized_by": {
          "type": "string",
          "description": "Identity that authorized this WO (human or agent ID)"
        },
        "authorization_chain": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Chain of approvals: [human → DoPeJar → HO2 agent → ...]"
        },
        "session_id": {
          "type": "string",
          "pattern": "^SES-[A-Z0-9]{8}$",
          "description": "Session this WO belongs to"
        },
        "parent_work_order_id": {
          "type": "string",
          "pattern": "^WO-\\d{8}-\\d{3}$",
          "description": "Parent WO if this is a sub-WO (HO2→HO1 delegation)"
        }
      },
      "description": "Authorization and delegation chain"
    },
    "tool_permissions": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "tool_id": { "type": "string" },
          "allowed": { "type": "boolean", "default": true },
          "constraints": { "type": "object" }
        },
        "required": ["tool_id"]
      },
      "description": "Tools the executing agent may invoke"
    },
    "io_schema": {
      "type": "object",
      "properties": {
        "input_schema": {
          "type": "object",
          "description": "JSON Schema for expected input to this WO"
        },
        "output_schema": {
          "type": "object",
          "description": "JSON Schema for expected output from this WO"
        }
      },
      "description": "Typed I/O contract for this work order"
    },
    "acceptance": {
      "type": "object",
      "properties": {
        "tests": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Test commands that must pass (exit 0)"
        },
        "checks": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Validation commands that must pass (exit 0)"
        }
      },
      "description": "Acceptance criteria for G4 gate"
    },
    "outputs": {
      "type": "object",
      "properties": {
        "files": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Expected output files (must be subset of scope.allowed_files)"
        },
        "registry_entries": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Registry entries to be created or modified"
        }
      },
      "description": "Expected outputs from this work order"
    },
    "metadata": {
      "type": "object",
      "properties": {
        "author": {
          "type": "string",
          "description": "Author of this work order"
        },
        "created_at": {
          "type": "string",
          "format": "date-time",
          "description": "ISO8601 timestamp when created"
        },
        "priority": {
          "type": "string",
          "enum": ["P0", "P1", "P2", "P3"],
          "description": "Priority level"
        },
        "tags": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Tags for categorization"
        }
      },
      "description": "Optional metadata"
    }
  },
  "additionalProperties": true
}
