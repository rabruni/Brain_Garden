{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://control-plane.local/schemas/package_manifest_l0.json",
  "title": "Package Manifest â€” Layer 0 (Axioms)",
  "description": "Minimal package definition. Vocabulary: file, package, hash, version. NO governance concepts (framework, spec, plane, ring are Layer 1).",
  "type": "object",
  "required": ["package_id", "version", "assets"],
  "properties": {
    "package_id": {
      "type": "string",
      "pattern": "^PKG-[A-Z0-9-]+$"
    },
    "version": {
      "type": "string",
      "pattern": "^(0|[1-9]\\d*)\\.(0|[1-9]\\d*)\\.(0|[1-9]\\d*)$"
    },
    "name": {
      "type": "string",
      "maxLength": 100
    },
    "description": {
      "type": "string",
      "maxLength": 500
    },
    "assets": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["path", "sha256"],
        "properties": {
          "path": { "type": "string", "minLength": 1 },
          "sha256": { "type": "string", "pattern": "^sha256:[0-9a-f]{64}$" }
        }
      },
      "minItems": 1
    },
    "schema_layer": {
      "type": "integer",
      "const": 0,
      "description": "This package uses Layer 0 vocabulary only"
    }
  },
  "additionalProperties": false
}
