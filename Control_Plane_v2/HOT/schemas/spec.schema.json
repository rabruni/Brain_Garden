{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://control-plane.local/schemas/spec.schema.json",
  "title": "Specification Pack Schema",
  "description": "Schema for Spec Pack manifest.yaml - the authoritative spec definition",
  "type": "object",
  "required": [
    "spec_id",
    "title",
    "framework_id",
    "status",
    "version",
    "assets"
  ],
  "properties": {
    "spec_id": {
      "type": "string",
      "pattern": "^SPEC-[A-Z0-9-]+$",
      "description": "Unique specification identifier"
    },
    "title": {
      "type": "string",
      "maxLength": 200,
      "description": "Human-readable specification title"
    },
    "framework_id": {
      "type": "string",
      "pattern": "^FMWK-[A-Z0-9-]+$",
      "description": "Framework this spec complies with"
    },
    "status": {
      "type": "string",
      "enum": ["active", "draft", "deprecated"],
      "description": "Current specification status"
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "Semantic version"
    },
    "assets": {
      "type": "array",
      "items": { "type": "string" },
      "minItems": 1,
      "description": "Files this spec owns (relative paths from plane root)"
    },
    "interfaces": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name"],
        "properties": {
          "name": {
            "type": "string",
            "description": "Interface name (function, class, etc.)"
          },
          "input": {
            "type": "object",
            "additionalProperties": { "type": "string" },
            "description": "Input parameter types"
          },
          "output": {
            "type": "object",
            "additionalProperties": { "type": "string" },
            "description": "Output/return types"
          },
          "invariants": {
            "type": "array",
            "items": { "type": "string" },
            "description": "Pre/post conditions"
          }
        }
      },
      "description": "Interfaces this spec exposes"
    },
    "invariants": {
      "type": "array",
      "items": { "type": "string" },
      "description": "Local invariants beyond framework requirements"
    },
    "acceptance": {
      "type": "object",
      "properties": {
        "tests": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Test commands that must pass"
        },
        "checks": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Validation commands that must pass"
        }
      },
      "description": "Acceptance criteria for this spec"
    },
    "plane_id": {
      "type": "string",
      "enum": ["hot", "ho3", "ho2", "ho1"],
      "description": "Primary plane this spec targets"
    },
    "non_goals": {
      "type": "array",
      "items": { "type": "string" },
      "description": "Explicit scope boundary - what this spec does NOT do"
    },
    "dependencies": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["spec_id"],
        "properties": {
          "spec_id": {
            "type": "string",
            "pattern": "^SPEC-[A-Z0-9-]+$"
          },
          "interfaces": {
            "type": "array",
            "items": { "type": "string" },
            "description": "Interfaces used from the dependency"
          }
        }
      },
      "description": "Other specs this one depends on"
    }
  },
  "additionalProperties": false
}
