{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://control-plane.local/schemas/cp_status.json",
  "title": "Control Plane Status Contract Schema v1.0",
  "description": "Schema for cp_inspect status output - health and state reporting contract",
  "type": "object",
  "required": [
    "schema_version",
    "timestamp",
    "plane",
    "status"
  ],
  "properties": {
    "schema_version": {
      "type": "string",
      "const": "1.0",
      "description": "Status contract schema version"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "When this status was captured"
    },
    "plane": {
      "type": "object",
      "required": ["name", "type", "root"],
      "properties": {
        "name": {
          "type": "string",
          "description": "Plane name (hot, first, second)"
        },
        "type": {
          "type": "string",
          "enum": ["HOT", "FIRST_ORDER", "SECOND_ORDER"],
          "description": "Plane type"
        },
        "root": {
          "type": "string",
          "description": "Root path for this plane"
        }
      }
    },
    "status": {
      "type": "string",
      "enum": ["healthy", "degraded", "unhealthy", "unknown"],
      "description": "Overall plane health status"
    },
    "packages": {
      "type": "object",
      "properties": {
        "installed": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/installed_package"
          },
          "description": "Currently installed packages"
        },
        "expected": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Expected package IDs from registry"
        },
        "missing": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Expected but not installed"
        },
        "unexpected": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Installed but not expected"
        },
        "drift_detected": {
          "type": "boolean",
          "description": "Whether file drift was detected"
        }
      }
    },
    "contracts": {
      "type": "object",
      "description": "Validation status of policy contracts",
      "properties": {
        "attention_policy": {
          "$ref": "#/$defs/contract_status"
        },
        "install_policy": {
          "$ref": "#/$defs/contract_status"
        }
      },
      "additionalProperties": {
        "$ref": "#/$defs/contract_status"
      }
    },
    "integrity": {
      "type": "object",
      "properties": {
        "registry_sync": {
          "type": "boolean",
          "description": "Registry matches filesystem"
        },
        "content_hashes_valid": {
          "type": "boolean",
          "description": "All content hashes verified"
        },
        "merkle_root_valid": {
          "type": "boolean",
          "description": "Merkle root verification passed"
        },
        "ledger_chain_intact": {
          "type": "boolean",
          "description": "Ledger hash chain verified"
        },
        "issues": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/integrity_issue"
          }
        }
      }
    },
    "ledger": {
      "type": "object",
      "properties": {
        "entry_count": {
          "type": "integer",
          "minimum": 0
        },
        "last_entry_at": {
          "type": "string",
          "format": "date-time"
        },
        "chain_valid": {
          "type": "boolean"
        }
      }
    },
    "warnings": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Non-fatal warnings"
    },
    "errors": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Errors encountered during status check"
    }
  },
  "$defs": {
    "installed_package": {
      "type": "object",
      "required": ["id", "version"],
      "properties": {
        "id": {
          "type": "string",
          "pattern": "^PKG-(G0|T0|T1|T2|T3)-[0-9]{3}$"
        },
        "version": {
          "type": "string"
        },
        "tier": {
          "type": "string",
          "enum": ["G0", "T0", "T1", "T2", "T3"]
        },
        "installed_at": {
          "type": "string",
          "format": "date-time"
        },
        "has_receipt": {
          "type": "boolean"
        },
        "files_intact": {
          "type": "boolean"
        }
      }
    },
    "contract_status": {
      "type": "object",
      "properties": {
        "present": {
          "type": "boolean"
        },
        "version": {
          "type": "string"
        },
        "valid": {
          "type": "boolean"
        },
        "validation_errors": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "integrity_issue": {
      "type": "object",
      "required": ["severity", "check", "message"],
      "properties": {
        "severity": {
          "type": "string",
          "enum": ["error", "warning", "info"]
        },
        "check": {
          "type": "string",
          "enum": ["registry_sync", "content_hash", "merkle_root", "ledger_chain"]
        },
        "message": {
          "type": "string"
        },
        "path": {
          "type": "string"
        }
      }
    }
  }
}
