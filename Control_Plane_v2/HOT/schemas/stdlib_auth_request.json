{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "stdlib_auth_request.json",
  "title": "Auth Stdlib Request",
  "description": "Request schema for the Authentication Standard Library CLI",
  "type": "object",
  "oneOf": [
    {
      "description": "Validate token operation",
      "properties": {
        "operation": {
          "const": "validate_token"
        },
        "token": {
          "type": "string",
          "description": "Authentication token in format 'user:signature'"
        }
      },
      "required": ["token"]
    },
    {
      "description": "Fingerprint secret operation",
      "properties": {
        "operation": {
          "const": "fingerprint"
        },
        "secret": {
          "type": "string",
          "description": "Secret value to fingerprint"
        }
      },
      "required": ["operation", "secret"]
    },
    {
      "description": "Require role operation",
      "properties": {
        "operation": {
          "const": "require_role"
        },
        "identity": {
          "type": "object",
          "description": "Identity object from validate_token",
          "properties": {
            "user": { "type": "string" },
            "roles": {
              "type": "array",
              "items": { "type": "string" }
            },
            "fingerprint": { "type": "string" }
          },
          "required": ["user", "roles"]
        },
        "role": {
          "type": "string",
          "description": "Role to check for"
        }
      },
      "required": ["operation", "identity", "role"]
    }
  ]
}
